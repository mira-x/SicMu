<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. @android:style/Theme.Black.NoTitleBar -->
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
        <item name="colorPrimary">@color/Black</item>
        <item name="colorOnPrimary">@color/White</item>
        <item name="colorActionBtn">?attr/colorOnPrimary</item>
        <item name="colorRatingOn">?attr/colorOnPrimary</item>
        <item name="colorRatingOff">@color/LightGrey</item>
        <item name="colorTrackLooperOn">?attr/colorOnPrimary</item>
        <item name="colorTrackLooperOff">@color/LightGrey</item>
        <item name="colorTextPlaying">?attr/colorOnPrimary</item>
        <item name="colorTextNotPlaying">@color/White</item>

        <item name="colorRowGroup">@color/LightBlack</item>
        <item name="colorRowGroup2nd">?attr/colorPrimary</item>
        <item name="colorRowSong">?attr/colorPrimary</item>
    </style>

    <style name="Theme.AppTheme" parent="Theme.AppThemeDark">
        <item name="colorOnPrimary">@color/Blood</item>
    </style>

    <style name="Theme.AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. @android:style/Theme.Black.NoTitleBar -->
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
        <item name="colorPrimary">@color/White</item>
        <item name="colorOnPrimary">@color/Black</item>
        <item name="colorActionBtn">?attr/colorOnPrimary</item>
        <item name="colorRatingOn">?attr/colorOnPrimary</item>
        <item name="colorRatingOff">@color/LightGrey</item>
        <item name="colorTrackLooperOn">?attr/colorOnPrimary</item>
        <item name="colorTrackLooperOff">@color/LightGrey</item>
        <item name="colorTextPlaying">?attr/colorOnPrimary</item>
        <item name="colorTextNotPlaying">@color/Black</item>

        <item name="colorRowGroup">@color/LightWhite</item>
        <item name="colorRowGroup2nd">?attr/colorPrimary</item>
        <item name="colorRowSong">?attr/colorPrimary</item>
    </style>

    <style name="Theme.AppThemeWhite" parent="Theme.AppThemeLight">
    </style>

    <style name="BottomButton" parent="android:Widget">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="SeekBarAppTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/seekbar_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:color">?attr/colorPrimary</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/Blood</item>
    </style>

</resources>
